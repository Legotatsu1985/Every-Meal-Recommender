<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%date{yyyy-MM-dd HH:mm:ss}] %boldCyan(%-20.-20thread) %boldGreen(%-10.-10logger{0}) %highlight(%-6level) --- %message%n
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>